<?xml version="1.0" encoding="utf-8"?>
<!-- 偷看帖子详情标题项布局 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="1dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:descendantFocusability="blocksDescendants"
        app:cardElevation="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/background_light"
            android:descendantFocusability="blocksDescendants"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <RelativeLayout
                android:id="@+id/lv_head"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                >
                <com.facebook.drawee.view.DraweeView
                    android:id="@+id/iv_head_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon"
                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_head_icon"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:text="@string/owner"
                    />
            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/likeandtreadlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lv_head"
        android:paddingTop="10dp" >

        <TextView
            android:id="@+id/contenttv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:textSize="@dimen/homeitemcontentsize" />

        <ImageView
            android:id="@+id/titleimg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:minHeight="200dp"
            android:maxHeight="500dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/contenttv"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/publishplace"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleimg"
            android:focusable="false"
            android:paddingTop="3dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp" />
        <!-- 图片下面是发表时间之类的 -->

        <LinearLayout
            android:id="@+id/pubinfolayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/publishplace"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/create_at_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="6dp"
                android:textSize="@dimen/homeitemsubtextsize" />

            <TextView
                android:id="@+id/reply_num_tv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:textAlignment="textStart"
                android:textSize="@dimen/homeitemsubtextsize" />
            <!-- 右边的三个按钮竖直平分所占用空间 -->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <ImageButton
                    android:id="@+id/likebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#00000000"
                    android:paddingRight="20dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow1" />

                <TextView
                    android:id="@+id/likecounttv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/likebtn"
                    android:layout_toRightOf="@id/likebtn"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/homeitemsubtextsize" />

                <ImageButton
                    android:id="@+id/treadbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:paddingRight="10dp"
                    android:layout_centerVertical="true"
                    android:paddingTop="6dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/arrow2" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>