<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/umeng_fb_gray"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <com.biu.biu.tools.AutoListView
        android:id="@+id/peep_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/umeng_fb_gray" >
    </com.biu.biu.tools.AutoListView>

    <TextView
        android:id="@+id/poi_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/umeng_fb_gray"
        android:focusable="false"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/peek_poi_title"
        android:textSize="@dimen/peepitemsubtitlesize" />

    <TextView
        android:id="@+id/poi_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/umeng_fb_white"
        android:focusable="false"
        android:hint="@string/peek_poi_hint"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textSize="@dimen/homeitemcontentsize"
        android:visibility="visible" />

    <ListView
        android:id="@+id/my_poi_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>